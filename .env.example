# Chrontainer Environment Configuration
# Copy this file to .env and update the values

# Flask Secret Key (REQUIRED for production!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-secure-random-string

# Flask Environment
FLASK_ENV=production

# Application Port
PORT=5000

# Database Path (default: /data/chrontainer.db)
DATABASE_PATH=/data/chrontainer.db

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Security Headers (set to false to disable for development behind proxy)
FORCE_HTTPS=false

# Discord Webhook (optional - can also be set via UI)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
